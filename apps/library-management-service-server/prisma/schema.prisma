datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Library {
  id         String      @id @default(cuid())
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  name       String?
  address    String?
  librarians Librarian[]
  books      Book[]
}

model Book {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  title      String?
  author     String?
  isbn       String?
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?
  library    Library?  @relation(fields: [libraryId], references: [id])
  libraryId  String?
  loans      Loan[]
}

model Member {
  id             String    @id @default(cuid())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  name           String?
  email          String?
  membershipDate DateTime?
  loans          Loan[]
}

model Librarian {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String?
  name      String?
  library   Library? @relation(fields: [libraryId], references: [id])
  libraryId String?
}

model Loan {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  loanDate   DateTime?
  returnDate DateTime?
  member     Member?   @relation(fields: [memberId], references: [id])
  memberId   String?
  book       Book?     @relation(fields: [bookId], references: [id])
  bookId     String?
}

model Category {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String?
  description String?
  books       Book[]
}
